doctype html
html(lang='en')
	head
		title Knowledge Base
		meta(charset='utf-8')
		meta(http-equiv='X-Ua-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='Node js with express Knowledge Base with pug and mongo db')
		link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href='/css/style.css')
		link(href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")

	body(style='padding-bottom:10rem;')
		nav.navbar.navbar-expand-lg.navbar-dark.bg-dark(color='white')
			a.navbar-brand(href='/') Articles Collection
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarSupportedContent.collapse.navbar-collapse
				ul.navbar-nav.mr-auto.navbar-center
					li.nav-item
						a.nav-link(href='/')
							| Home 
							span.sr-only (current)
					if user
						li.nav-item
							a.nav-link(href='/articles/add') Add Article
					li.nav-item.dropdown
						a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Dropdown
						.dropdown-menu(aria-labelledby='navbarDropdown')
							a.dropdown-item(href='#') Action
							a.dropdown-item(href='#') Another action
							.dropdown-divider
							a.dropdown-item(href='#') Something else here
					li.nav-item
						a.nav-link.disabled(href='#') Disabled
						
				ul.nav.navbar-nav.navbar-right.list-group
					if user
						li.nav-item
							a.nav-link(href='/users/logout') Logout
							
					else
						li.nav-item
							a.nav-link(href='/users/register') Register
						li.nav-item
							a.nav-link(href='/users/login') Login

				form.form-inline.my-2.my-lg-0
					input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
					button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

		.container(style='content-align: center;')
			!= messages('message', locals)
			if errors 
				each error, i in errors
					div(class='alert alert-danger') #{error.msg}
				

			block content
			hr
			//- Footer
			footer.page-footer.font-small.cyan.darken-3.bg-dark
				//- Footer Elements
				.container-fluid
					//- Grid row
					.row
						//- Grid column
						.col-md-12.py-5
							.mb-5.flex-center(style='color: white; font-weight:bolder;')
								//- Facebook
								a.fb-ic
									i.fa.fa-facebook-f.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
								//- Twitter
								a.tw-ic
									i.fa.fa-twitter.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
								//- Google +
								a.gplus-ic
									i.fa.fa-google-plus-g.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
								//- Linkedin
								a.li-ic
									i.fa.fa-linkedin-in.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
								//- Instagram
								a.ins-ic
									i.fa.fa-instagram.fa-lg.white-text.mr-md-5.mr-3.fa-2x  
								//- Pinterest
								a.pin-ic
									i.fa.fa-pinterest.fa-lg.white-text.fa-2x  
						//- Grid column
						//- Grid row
						//- Footer Elements
						//- Copyright
						.footer-copyright.text-center.py-3
							| Â© 2020 Copyright:
							a(href='https://codetym-africa.com/')  CodeTym Africa
						//- Copyright
			//- Footer
		
		script( src='/bower_components/jquery/dist/jquery.js' type='text/javascript' )
		script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
		script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
		script( src='/bower_components/bootstrap/dist/js/bootstrap.js' )
		script( src='/js/main.js' type='text/javascript' )
