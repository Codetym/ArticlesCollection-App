extends layout

block content
    .container
        form(method='POST', action='/users/login')
            .form-group.alert.alert-success(style='text-align:center; font-weight:bolder;')
                h1 Login
            
            .form-group
                label Username:
                input.form-control(type='text', name='username')

            .form-group
                label Password:
                input.form-control(type='password', name='password')

            .form-group
                input.btn.btn-success(type='submit', value='Login')
